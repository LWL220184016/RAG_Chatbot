# Pull neo4j image from docker hub
podman pull docker.io/neo4j:latest

# Create a container and run the neo4j image
podman run -d \
  --name neo4j \
  -e NEO4J_AUTH=neo4j/StrongPassword123 \
  -p 7474:7474 \
  -p 7687:7687 \
  -v /home/user/RAG_Chatbot/local_neo4j_storageDir:/data \
  neo4j:latest

# If you want to run the container with a specific user
# you can use the --user flag to specify the user
podman run -d \
  --name neo4j \
  --user neo4j \
  -e NEO4J_AUTH=neo4j/StrongPassword123 \
  -p 7474:7474 \
  -p 7687:7687 \
  -v /home/user/RAG_Chatbot/local_neo4j_storageDir:/data \
  neo4j:latest

# Run a exist container
podman start neo4j

# Stop the container
podman stop neo4j

# before run the project
URL examples: 
  export NEO4J_URI="neo4j://localhost" or "neo4j+s://xxx.databases.neo4j.io" 
AUTH examples: 
  export NEO4J_USERNAME="username"
  export NEO4J_PASSWORD="password"